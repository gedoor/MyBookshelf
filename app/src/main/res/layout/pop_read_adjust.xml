<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View style="@style/Style.Shadow.Bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_menu"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/background_menu"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:id="@+id/ll_follow_sys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/brightness"
                    android:textColor="@color/tv_text_default"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:text="@string/flow_sys"
                    android:textColor="@color/tv_text_default"
                    android:textSize="14sp" />

                <com.monke.monkeybook.widget.checkbox.SmoothCheckBox
                    android:id="@+id/scb_follow_sys"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="false"
                    app:color_checked="#767676"
                    app:color_tick="#ffffff"
                    app:color_unchecked="#ffffff"
                    app:color_unchecked_stroke="#c1c1c1"
                    app:duration="150" />
            </LinearLayout>

            <com.monke.mprogressbar.MHorProgressBar
                android:id="@+id/hpb_light"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:bgdrawable="@color/btn_bg_press"
                app:cantouch="true"
                app:cursordrawable="@drawable/shape_progress_cursor_read"
                app:cursordrawable_height="13dp"
                app:cursordrawable_width="13dp"
                app:fontdrawable="@color/btn_bg_press_2"
                app:maxprogress="255"
                app:progresswidth="2dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/btn_bg_press" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/background_menu"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:id="@+id/ll_tts_SpeechRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/read_aloud_speed"
                    android:textColor="@color/tv_text_default"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:text="@string/flow_sys"
                    android:textColor="@color/tv_text_default"
                    android:textSize="14sp" />

                <com.monke.monkeybook.widget.checkbox.SmoothCheckBox
                    android:id="@+id/scb_tts_follow_sys"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="false"
                    app:color_checked="#767676"
                    app:color_tick="#ffffff"
                    app:color_unchecked="#ffffff"
                    app:color_unchecked_stroke="#c1c1c1"
                    app:duration="150" />
            </LinearLayout>

            <com.monke.mprogressbar.MHorProgressBar
                android:id="@+id/hpb_tts_SpeechRate"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:bgdrawable="@color/btn_bg_press"
                app:cantouch="true"
                app:cursordrawable="@drawable/shape_progress_cursor_read"
                app:cursordrawable_height="13dp"
                app:cursordrawable_width="13dp"
                app:fontdrawable="@color/btn_bg_press_2"
                app:maxprogress="20"
                app:progresswidth="2dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/btn_bg_press" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/background_menu"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:id="@+id/ll_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/auto_next_page_speed"
                    android:textColor="@color/tv_text_default"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_auto_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="%dS"
                    android:textColor="@color/tv_text_default"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <com.monke.mprogressbar.MHorProgressBar
                android:id="@+id/hpb_click"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:bgdrawable="@color/btn_bg_press"
                app:cantouch="true"
                app:cursordrawable="@drawable/shape_progress_cursor_read"
                app:cursordrawable_height="13dp"
                app:cursordrawable_width="13dp"
                app:fontdrawable="@color/btn_bg_press_2"
                app:maxprogress="180"
                app:progresswidth="2dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>